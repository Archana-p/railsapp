<%= form_tag sessions_path,class: "form-horizontal", method: "post" do  %>
<div class= "text-center">
<h4> Login </h4></div>

<div class="form-group", "text-center">
    <label for="inputemail" class="col-sm-2 control-label">Email</label>
    <div class="col-sm-6">
      <%=  text_field_tag :email ,'', class: "form-control" ,id: "inputemail"%>
    </div>
  </div>

  <div class="form-group", "text-center">
    <label for="inputpassword" class="col-sm-2 control-label">Password</label>
    <div class="col-sm-6">
    	<%= password_field_tag :password ,'', class: "form-control" ,id: "inputpassword"%>
    </div>
  </div>

  


  <div class = "form-group","text-center">
<div class="col-sm-offset-2 col-sm-10">
      
      <%= submit_tag "login" , class: "btn-btn-default" %>
    </div>
  </div>
 <%end %>