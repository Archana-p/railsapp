<%= @comment.errors.full_messages.join(", ") if @comment.errors.present?%>
<%= form_for [@article,@comment] , html: { class: "form-horizontal" } do |f| %>
<div class= "text-center">
<h4> Comment </h4></div>
<div class="form-group", "text-right">
    <label for="inputname" class="col-sm-2 control-label">Name</label>
    <div class="col-sm-6">
    	<%=  f.text_field :name , class: "form-control" ,id: "inputname"%>
    </div>
  </div>
<div class="form-group", "text-right">
    <label for="inputemail" class="col-sm-2 control-label">Email</label>
    <div class="col-sm-6">
      <%=  f.text_field :email , class: "form-control" ,id: "inputemail"%>
    </div>
  </div>

  <div class="form-group", "text-right">
    <label for="inputcomment" class="col-sm-2 control-label">Comment</label>
    <div class="col-sm-6">
    	<%=  f.text_field :comment , class: "form-control" ,id: "inputcomment"%>
    </div>
  </div>
  <div class = "form-group","text-right">
<div class="col-sm-offset-2 col-sm-10">
      
      <%= f.submit "post comment" , class: "btn-btn-default" %>
    </div>
  </div>
 <%end %>

